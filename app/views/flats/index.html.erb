<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Simple Airbnb</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <div class="ms-auto flex">
            <form class="flex my-2 my-lg-0">
              <input class="form-control me-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <a class="btn btn-outline-primary my-2 my-sm-0 ms-2" href="/flats/new">Add Flat</a>
          </div>
        </div>
      </div>
    </nav>

    <div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= @flats.count %> flats.</p>
    </div>
  </div>


  <div class="row">
      <div class="col-md-4">

      <% @flats.each do |flat| %>
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('https://www.pexels.com/photo/round-brown-wooden-stool-near-brown-sofa-892618/')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name.capitalize %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons me-2">people</i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ms-3">
                <i class="material-icons me-2">euro_symbol</i> <%= flat.price_per_night %>

              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <a href="/flats/5819">More info</a>
            <a class="ms-3 text-warning" href="/flats/5819/edit">Edit</a>
            <a data-confirm="Are you sure?" class="ms-3 text-danger" rel="nofollow" data-method="delete" href="/flats/5819">Remove</a>
          </div>
        </div>
      <% end %>
      </div>
  </div>
</div>



</body>
